# Environment configuration for PhillOS

# ---- Backend settings ----
PHILLOS_STORAGE_DIR=./storage           # Directory where persistent data is saved
PORT=3001                               # Port for the main backend server
PHONE_BRIDGE_URL=http://localhost:3002  # URL of the phone bridge service
PROTON_DOWNLOAD_URL=https://steamcdn-a.akamaihd.net/client/Proton-8.0.tar.gz  # Custom Proton archive
PROTON_VERSION=Proton-8.0               # Proton version for setup script
PROTON_SHA256=                          # Optional checksum for Proton archive

# Phone bridge service
PHONE_BRIDGE_PORT=3002                  # Port used by the phone bridge server
MODEM_DEVICE=/dev/ttyUSB0               # Serial device path for the modem

# Training pipeline
TRAINING_PORT=3003                      # Port for the training pipeline server
PHILLOS_TRAINING_ENABLED=true           # Enable automatic training
PHILLOS_TRAINING_INTERVAL_MS=3600000    # Training interval in milliseconds
PHILLOS_BASE_MODEL=qwen3:1.7b           # Base model name
PHILLOS_FINETUNED_MODEL=qwen3-finetuned # Output model name

# ---- Frontend (Vite) ----
VITE_LOCAL_AI_MODEL=qwen3:1.7b          # Local AI model used by the CoPilot
VITE_CLOUD_SYNC_BACKEND=webdav          # 'webdav', 's3', or 'api'
VITE_WEBDAV_URL=                        # WebDAV base URL for settings
VITE_WEBDAV_USERNAME=                   # WebDAV username
VITE_WEBDAV_PASSWORD=                   # WebDAV password
VITE_S3_URL=                            # S3 object URL for settings
VITE_S3_AUTH_HEADER=                    # Authorization header for S3
VITE_SYNC_API_URL=                      # Custom sync API endpoint
VITE_SYNC_API_TOKEN=                    # Bearer token for custom API
VITE_TRAINING_ENABLED=true              # Run training scheduler in the UI
VITE_TRAINING_FREQUENCY_MS=3600000      # Interval for UI training in ms
